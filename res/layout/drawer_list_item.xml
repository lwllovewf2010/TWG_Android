<com.modusgo.twg.customviews.CheckedRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ubi="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/drawer_list_item_bg_selector">
	<com.modusgo.twg.customviews.CheckedTypefacedTextView 
	    android:id="@+id/tvText"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
	    android:gravity="center"
	    android:minHeight="54dp"
	    android:textColor="@drawable/drawer_list_item_text_selector"
	    android:textSize="20sp"
		ubi:typeface="EncodeSansNormal-300-Light.ttf"
		android:checkMark="@null"/>
	<ImageView 
	    android:id="@+id/imageIcon"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="7dp"
	    android:layout_toRightOf="@+id/tvText"
	    android:layout_centerVertical="true"/>
</com.modusgo.twg.customviews.CheckedRelativeLayout>