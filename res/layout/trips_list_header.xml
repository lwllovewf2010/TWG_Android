<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ubi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e6e9ed">

    <com.modusgo.twg.customviews.TypefacedTextView
        android:id="@+id/tvDate"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp"
        android:paddingBottom="8dp"
        android:paddingTop="12dp"
        android:text="07/01/2014"
        android:textColor="#3C454F"
        android:textSize="10sp"
        ubi:typeface="EncodeSansNormal-600-SemiBold.ttf" />
    
    <com.modusgo.twg.customviews.TypefacedTextView
        android:id="@+id/tvTotals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:paddingTop="10dp"
        android:text="Totals: 0 hr 26 min 24.3 MI"
        android:textColor="#3C454F"
        android:textSize="12sp"
        ubi:typeface="EncodeSansNormal-300-Light.ttf" />

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/list_header_line" />

</RelativeLayout>