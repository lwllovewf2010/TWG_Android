<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ubi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:paddingBottom="2dp" >

    <ImageView
        android:id="@+id/imageIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_clock" />

    <View
        android:id="@+id/centerAnchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true" />

    <com.modusgo.ubi.customviews.TypefacedTextView
        android:id="@+id/tvCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageIcon"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="-5dp"
        android:layout_toRightOf="@+id/centerAnchor"
        android:background="@drawable/red_rounded_rectangle"
        android:paddingBottom="2dp"
        android:paddingLeft="5.6dp"
        android:paddingRight="5.7dp"
        android:paddingTop="2dp"
        android:text="5"
        android:textColor="#FFF"
        android:textSize="10sp"
        android:visibility="gone"
        ubi:typeface="EncodeSansNormal-300-Light.ttf" />

    <com.modusgo.ubi.customviews.TypefacedTextView
        android:id="@+id/tabsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:textColor="@drawable/driver_tab_text_selector"
        android:textSize="10sp"
        ubi:typeface="EncodeSansNormal-300-Light.ttf" />

</RelativeLayout>