<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ubi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/slide_1" />

    <com.modusgo.ubi.customviews.TypefacedTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:gravity="top|center"
        android:text="Get the best discount."
        android:textColor="#FFF"
        android:textAllCaps="true"
        android:textSize="18sp"
        ubi:typeface="EncodeSansNormal-600-SemiBold.ttf" />
    
    
    <com.modusgo.ubi.customviews.TypefacedTextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:minLines="3"
        android:gravity="top|center"
        android:text="View your driver behavior and become \na better driver."
        android:textColor="#FFF"
        android:textSize="12.5sp"
        ubi:typeface="EncodeSansNormal-300-Light.ttf" />

</LinearLayout>