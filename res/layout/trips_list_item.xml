<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ubi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e6e9ed"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.modusgo.ubi.customviews.TypefacedTextView
            android:id="@+id/tvCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageIcon"
            android:background="@drawable/red_rounded_rectangle_radius_10"
            android:paddingBottom="2dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="2dp"
            android:text="5"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:visibility="gone"
            ubi:typeface="EncodeSansNormal-300-Light.ttf" />
    </LinearLayout>

    <com.modusgo.ubi.customviews.TypefacedTextView
        android:id="@+id/tvStartTime"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="05:00 PM"
        android:textColor="#697078"
        android:textSize="12.5sp"
        ubi:typeface="EncodeSansNormal-300-Light.ttf" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="7dp"
        android:src="@drawable/arrow_dashed" />

    <com.modusgo.ubi.customviews.TypefacedTextView
        android:id="@+id/tvEndTime"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="05:00 PM"
        android:textColor="#697078"
        android:textSize="12.5sp"
        ubi:typeface="EncodeSansNormal-300-Light.ttf" />

    <com.modusgo.ubi.customviews.TypefacedTextView
        android:id="@+id/tvDistance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="10.0 MI"
        android:textColor="#00AEEF"
        android:textSize="12.5sp"
        ubi:typeface="EncodeSansNormal-300-Light.ttf" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/arrow_small_right" />

</LinearLayout>