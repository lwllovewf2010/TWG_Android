<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Headers -->

    <RelativeLayout
        android:id="@+id/hdr_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/hdr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dip"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!--  -->

    <RelativeLayout
        android:id="@+id/vehicle_info_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="5dip" />

        <TextView
            android:id="@+id/info_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dip" />
    </RelativeLayout>

    <!-- Recall Information -->

    <RelativeLayout
        android:id="@+id/recall_info_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/recall_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="5dip" />

        <TextView
            android:id="@+id/recall_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recall_name"
            android:padding="5dip" />
    </RelativeLayout>

    <!-- Diagnostic Trouble Codes -->

    <LinearLayout
        android:id="@+id/dtc_info_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:id="@+id/dtc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dip" />

        <TextView
            android:id="@+id/dtc_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dip" />

        <TextView
            android:id="@+id/dtc_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recall_name"
            android:layout_weight="1"
            android:padding="5dip" />
    </LinearLayout>

    <!-- Alerts (is this still used) -->

    <RelativeLayout
        android:id="@+id/alert_info_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/alert_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:drawablePadding="3dip"
            android:padding="2dip"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alert_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/alert_info"
            android:padding="2dip"
            android:textSize="16sp" />
    </RelativeLayout>

    <!-- Service Log Entry -->

    <LinearLayout
        android:id="@+id/service_log_info_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/service_log_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:id="@+id/service_log_detail_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dip"
                android:layout_marginTop="3dip"
                android:text="@string/WhenToReplace"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/service_log_replace_interval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dip"
                android:layout_marginTop="3dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dip"
                android:layout_marginTop="3dip"
                android:background="@color/gray"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="3dip"
                    android:layout_marginTop="3dip"
                    android:text="@string/ReplaceIn"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/service_log_remaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="3dip"
                    android:layout_marginTop="3dip" />
            </LinearLayout>
        </LinearLayout>
                <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dip"
                android:layout_marginTop="3dip"
                android:weightSum="2"
                android:orientation="horizontal" >
                
                <Button
                    android:id="@+id/view_service_log_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:layout_marginBottom="3dip"
                    android:layout_marginTop="3dip"
                    android:text="@string/ViewServiceLog" />
                    
                <Button
                    android:id="@+id/call_service_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:layout_marginBottom="3dip"
                    android:layout_marginTop="3dip"
                    android:text="@string/CallService" />
                    
                </LinearLayout>
    </LinearLayout>

</FrameLayout>