<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Headers -->

    <RelativeLayout
        android:id="@+id/hdr_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/hdr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dip"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- depricated -->

    <RelativeLayout
        android:id="@+id/vehicle_info_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="5dip" />

        <TextView
            android:id="@+id/info_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dip" />
    </RelativeLayout>

    <!-- Recall Information -->

    <LinearLayout
        android:id="@+id/recall_info_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        
        android:orientation="horizontal"
        android:weightSum="1" >

        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_alerts_red" />
        
		<LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:orientation="vertical"
			android:weightSum="2">
		    
        <TextView
            android:id="@+id/recall_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:singleLine="true" 
            android:ellipsize="end"/>

        <TextView
        	android:id="@+id/recall_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:singleLine="true" />
		</LinearLayout>        
        
    </LinearLayout>

    <!-- Diagnostic Trouble Codes -->

    <LinearLayout
        android:id="@+id/dtc_info_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:id="@+id/dtc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dip" />

        <TextView
            android:id="@+id/dtc_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dip" />

        <TextView
            android:id="@+id/dtc_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="5dip" />
    </LinearLayout>

    <!-- Alerts -->

    <LinearLayout
        android:id="@+id/alert_info_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:id="@+id/alert_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:padding="2dip"
            android:singleLine="true" />

        <TextView
            android:id="@+id/alert_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:padding="2dip"
            android:singleLine="true" />

        <TextView
            android:id="@+id/alert_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:padding="2dip" />
    </LinearLayout>

    <!-- Service Entry -->

    <LinearLayout
        android:id="@+id/service_info_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/service_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/service_detail_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dip"
            android:layout_marginStart="5dip"
            android:background="@color/gray"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/service_detail_replace_every"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dip"
                android:layout_marginTop="3dip" />

            <TextView
                android:id="@+id/service_detail_next_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dip"
                android:layout_marginTop="3dip" />
        </LinearLayout>
    </LinearLayout>

    <!-- Service Log Entry -->

    <LinearLayout
        android:id="@+id/service_log_info_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="#D0D0D0"
        android:orientation="vertical"
        android:paddingBottom="5dp" >

        <TextView
            android:id="@+id/service_log_info_line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/service_log_info_line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/service_due_info_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/service_due_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Change Oil and Filter"
            android:textColor="#000000"
            android:textSize="12.5sp" />

        <TextView
            android:id="@+id/service_due_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Service required now"
            android:textColor="#000000"
            android:textSize="12.5sp" />
    </LinearLayout>

</FrameLayout>