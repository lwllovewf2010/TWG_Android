<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ubi="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="90dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="16dp"
    android:layout_weight=".5"
    android:background="#fff"
    android:orientation="vertical" >

    <com.modusgo.ubi.customviews.TypefacedTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/driver_stats_block_header"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="Score"
        android:textColor="#fff"
        android:textSize="18.65sp"
        ubi:typeface="Roboto-Thin.ttf" />

    <com.modusgo.ubi.customviews.TypefacedTextView
        android:id="@+id/tvValue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="B"
        android:textColor="@color/driver_stats_block_header"
        android:textSize="29.45dp"
        ubi:typeface="Roboto-Light.ttf" />

</LinearLayout>