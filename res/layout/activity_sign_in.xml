<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:ubi="http://schemas.android.com/apk/res-auto" 
	android:id="@+id/scrollView"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true"
	android:background="@color/appBg"
	android:gravity="center">
	
	<LinearLayout 
		android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center_horizontal"
	    android:orientation="vertical">
	    <LinearLayout
		    android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight=".4"
		    android:gravity="center"
		    android:background="#0b2848">
		    <ImageView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingBottom="20dp"
		        android:paddingTop="20dp"
		        android:src="@drawable/logo_modus"/>
		</LinearLayout>
		<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:background="#4c5676">	
		</LinearLayout>
	    <LinearLayout
		    android:orientation="vertical"
		    android:layout_width="320dp"
		    android:layout_height="0dp"
		    android:layout_weight=".6"
		    android:paddingLeft="30dp"
		    android:paddingRight="30dp">
	
	        <com.modusgo.ubi.customviews.TypefacedTextView
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="Welcome"
			                android:paddingTop="24dp"
			                android:paddingBottom="34dp"
			                android:textSize="25sp"
			                android:textColor="#FFF"
			                ubi:typeface="Roboto-Regular.ttf" />
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="32dp" >
	
	            <ImageView
	                android:layout_width="34dp"
	                android:layout_height="match_parent"
	                android:src="@drawable/ic_username" />
	
	            <EditText
	                android:id="@+id/email"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:paddingLeft="16dp"
	                android:paddingRight="16dp"
	                android:background="#FFF"
	                android:hint="E-mail"
	                android:textSize="11sp"
	                android:inputType="textEmailAddress" />
	
	        </LinearLayout>
	        
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="32dp"
	            android:layout_marginTop="6dp" >
	
	            <ImageView
	                android:layout_width="34dp"
	                android:layout_height="match_parent"
	                android:src="@drawable/ic_password" />
	
	            <EditText
	                android:id="@+id/password"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:paddingLeft="16dp"
	                android:paddingRight="16dp"
	                android:background="#FFF"
	                android:hint="Password"
	                android:textSize="11sp"
	                android:inputType="textPassword" />
	
	        </LinearLayout>
	        
	        <LinearLayout
	            android:orientation="horizontal"
	            android:layout_width="match_parent"
	            android:layout_height="32dp"
	            android:layout_marginTop="6dp"
	            android:layout_marginBottom="16dp" >
	
	            <Button
	                android:id="@+id/btnSignIn"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight=".5"
	                android:layout_marginRight="3dp"
	                android:background="@color/btn_green"
	                android:textColor="@color/white"
	                android:textSize="11sp"
	                android:text="Sign In" />
	            <Button
	                android:id="@+id/btnForgotPassword"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight=".5"
	                android:layout_marginLeft="3dp"
	                android:background="@color/btn_transparent_orange"
	                android:textColor="@color/btn_text_orange_white"
	                android:textSize="11sp"
	                android:text="Forgot your password?" />
	
	        </LinearLayout>
		</LinearLayout>
	</LinearLayout>
</ScrollView>