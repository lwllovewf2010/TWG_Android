<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ubi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#ef463b"
        android:tag="Bottom1" >

        <com.modusgo.ubi.customviews.TypefacedButton
            android:id="@+id/btnDelete"
            android:minHeight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/btn_transparent_orange_light"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Completed"
            android:textSize="12sp"
            android:textColor="#FFF"
            ubi:typeface="EncodeSansNormal-500-Medium.ttf" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_transparent_orange_light" >

        <com.modusgo.ubi.customviews.TypefacedTextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tvImportance"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Random Misﬁre Detected"
            android:textColor="#697078"
            android:textSize="10sp"
            ubi:typeface="EncodeSansNormal-300-Light.ttf" />

        <com.modusgo.ubi.customviews.TypefacedTextView
            android:id="@+id/tvImportance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:text="Low"
            android:textColor="#00AEEF"
            android:textSize="12.5sp"
            ubi:typeface="EncodeSansNormal-300-Light.ttf" />
    </RelativeLayout>

</com.daimajia.swipe.SwipeLayout>