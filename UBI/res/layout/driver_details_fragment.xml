<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ubi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvVehicle"
                android:background="#e6FFFFFF"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/btn_border_rounded_orange_light"
                        android:clickable="true"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" >

                        <com.modusgo.ubi.customviews.TypefacedTextView
                            android:id="@+id/tvDistanceToCar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/tvDistanceToCarLabel"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:drawableLeft="@drawable/ic_man"
                            android:drawablePadding="3dp"
                            android:gravity="bottom"
                            android:text="â€¦"
                            android:textColor="#00AEEF"
                            android:textSize="20sp"
                            ubi:typeface="arialbd.ttf" />

                        <com.modusgo.ubi.customviews.TypefacedTextView
                            android:id="@+id/tvDistanceToCarLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:text="Miles to Car"
                            android:textColor="#697078"
                            android:textSize="10sp"
                            ubi:typeface="EncodeSansNormal-300-Light.ttf" />
                    </RelativeLayout>

                    <Space
                        android:id="@+id/spaceFuel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".1" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/btn_border_rounded_orange_light"
                        android:clickable="true"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" >

                        <com.modusgo.ubi.customviews.TypefacedTextView
                            android:id="@+id/tvFuel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:drawableLeft="@drawable/ic_fuel_green"
                            android:drawablePadding="3dp"
                            android:text="N/A"
                            android:textColor="#24a406"
                            android:textSize="24sp"
                            ubi:typeface="arialbd.ttf" />

                        <com.modusgo.ubi.customviews.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvFuel"
                            android:layout_marginTop="-3dp"
                            android:gravity="center"
                            android:text="Fuel left"
                            android:textColor="#697078"
                            android:textSize="10sp"
                            ubi:typeface="EncodeSansNormal-300-Light.ttf" />
                    </RelativeLayout>

                    <Space
                        android:id="@+id/spaceDiagnostics"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".1" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/btn_border_rounded_orange_light"
                        android:clickable="true"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" >

                        <com.modusgo.ubi.customviews.TypefacedTextView
                            android:id="@+id/tvDiagnosticsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:drawableLeft="@drawable/ic_diagnostics_green_medium"
                            android:drawablePadding="3dp"
                            android:text="2"
                            android:textColor="#EF4136"
                            android:textSize="24sp"
                            ubi:typeface="arialbd.ttf" />

                        <com.modusgo.ubi.customviews.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvDiagnosticsCount"
                            android:layout_marginTop="-3dp"
                            android:gravity="center"
                            android:text="Check Engine"
                            android:textColor="#697078"
                            android:textSize="10sp"
                            ubi:typeface="EncodeSansNormal-300-Light.ttf" />
                    </RelativeLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".1" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/btn_border_rounded_orange_light"
                        android:clickable="true"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" >

                        <com.modusgo.ubi.customviews.TypefacedTextView
                            android:id="@+id/tvAlertsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:drawableLeft="@drawable/ic_alerts_green_medium"
                            android:drawablePadding="3dp"
                            android:text="2"
                            android:textColor="#EF4136"
                            android:textSize="24sp"
                            ubi:typeface="arialbd.ttf" />

                        <com.modusgo.ubi.customviews.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvAlertsCount"
                            android:layout_marginTop="-3dp"
                            android:gravity="center"
                            android:text="Alerts"
                            android:textColor="#697078"
                            android:textSize="10sp"
                            ubi:typeface="EncodeSansNormal-300-Light.ttf" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/btn_transparent_orange_light"
                    android:paddingBottom="3dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="3dp" >

                    <com.modusgo.ubi.customviews.TypefacedTextView
                        android:id="@+id/tvLocationLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CURRENT LOCATION"
                        android:textColor="#3c454f"
                        android:textSize="10sp"
                        ubi:typeface="EncodeSansNormal-600-SemiBold.ttf" />

                    <com.modusgo.ubi.customviews.TypefacedTextView
                        android:id="@+id/tvLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvLocationLabel"
                        android:text="301-383 Lake Street, Huntington Beach, CA"
                        android:textColor="#697078"
                        android:textSize="12.5sp"
                        ubi:typeface="EncodeSansNormal-300-Light.ttf" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_small_right" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/btn_transparent_orange_light"
                    android:paddingBottom="3dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="3dp" >

                    <com.modusgo.ubi.customviews.TypefacedTextView
                        android:id="@+id/tvDateLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LAST TRIP"
                        android:textColor="#3c454f"
                        android:textSize="10sp"
                        ubi:typeface="EncodeSansNormal-600-SemiBold.ttf" />

                    <com.modusgo.ubi.customviews.TypefacedTextView
                        android:id="@+id/tvDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvDateLabel"
                        android:text="07/05/2014 05:00 PM PST"
                        android:textColor="#697078"
                        android:textSize="12.5sp"
                        ubi:typeface="EncodeSansNormal-300-Light.ttf" />

                    <ImageView
                        android:id="@+id/imageArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_small_right" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvVehicle"
                android:layout_alignTop="@+id/tvName"
                android:background="#e6FFFFFF"
                android:orientation="vertical" />

            <ImageView
                android:id="@+id/imagePhoto"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:layout_marginLeft="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/person_test3" />

            <com.modusgo.ubi.customviews.TypefacedTextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="65dp"
                android:paddingTop="4dp"
                android:layout_toRightOf="@+id/imagePhoto"
                android:text="Melissa"
                android:textColor="#697078"
                android:textSize="20sp"
                ubi:typeface="EncodeSansNormal-300-Light.ttf" />

            <com.modusgo.ubi.customviews.TypefacedTextView
                android:id="@+id/tvVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvName"
                android:layout_below="@+id/tvName"
                android:text="2012 Ford Edge"
                android:textColor="#00aeef"
                android:textSize="12.5sp"
                ubi:typeface="EncodeSansNormal-300-Light.ttf" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>