<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ubi="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <!-- The main content view -->

            <ScrollView
                android:id="@+id/svContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/llInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imageAlerts"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_alerts_red" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <com.modusgo.ubi.customviews.TypefacedTextView
                                android:id="@+id/tvCode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="P10455 - RANDOM MISFIRE DETECTED"
                                android:textColor="#697078"
                                android:textSize="12sp"
                                ubi:typeface="EncodeSansNormal-600-SemiBold.ttf" />

                            <com.modusgo.ubi.customviews.TypefacedTextView
                                android:id="@+id/tvImportance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Low importance"
                                android:textColor="#00AEEF"
                                android:textSize="12.5sp"
                                ubi:typeface="EncodeSansNormal-300-Light.ttf" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.modusgo.ubi.customviews.TypefacedTextView
                        android:id="@+id/tvDescriptionLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="17dp"
                        android:text="Description"
                        android:textAllCaps="true"
                        android:textColor="#143358"
                        android:textSize="12sp"
                        ubi:typeface="EncodeSansNormal-600-SemiBold.ttf" />

                    <com.modusgo.ubi.customviews.TypefacedTextView
                        android:id="@+id/tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="2dp"
                        android:text="Replace Exhaust Gas Recirculation (ECR) Valve and clean all EGR ports"
                        android:textColor="#697078"
                        android:textSize="10.5sp"
                        ubi:typeface="EncodeSansNormal-300-Light.ttf" />

                    <LinearLayout
                        android:id="@+id/lLaborHours"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal" >

                        <com.modusgo.ubi.customviews.TypefacedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Labor hours"
                            android:textAllCaps="true"
                            android:textColor="#143358"
                            android:textSize="12sp"
                            ubi:typeface="EncodeSansNormal-600-SemiBold.ttf" />

                        <com.modusgo.ubi.customviews.TypefacedTextView
                            android:id="@+id/tvLaborHours"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="1.0"
                            android:textColor="#00AEEF"
                            android:textSize="12.5sp"
                            ubi:typeface="EncodeSansNormal-300-Light.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llEstLaborCost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal" >

                        <com.modusgo.ubi.customviews.TypefacedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Est. Labor cost"
                            android:textAllCaps="true"
                            android:textColor="#143358"
                            android:textSize="12sp"
                            ubi:typeface="EncodeSansNormal-600-SemiBold.ttf" />

                        <com.modusgo.ubi.customviews.TypefacedTextView
                            android:id="@+id/tvEstLaborCost"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="1.0"
                            android:textColor="#00AEEF"
                            android:textSize="12.5sp"
                            ubi:typeface="EncodeSansNormal-300-Light.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llEstPartsCost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal" >

                        <com.modusgo.ubi.customviews.TypefacedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Est.Parts cost"
                            android:textAllCaps="true"
                            android:textColor="#143358"
                            android:textSize="12sp"
                            ubi:typeface="EncodeSansNormal-600-SemiBold.ttf" />

                        <com.modusgo.ubi.customviews.TypefacedTextView
                            android:id="@+id/tvEstPartsCost"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="1.0"
                            android:textColor="#00AEEF"
                            android:textSize="12.5sp"
                            ubi:typeface="EncodeSansNormal-300-Light.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llEstTotalCost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal" >

                        <com.modusgo.ubi.customviews.TypefacedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Est. Total cost"
                            android:textAllCaps="true"
                            android:textColor="#143358"
                            android:textSize="12sp"
                            ubi:typeface="EncodeSansNormal-600-SemiBold.ttf" />

                        <com.modusgo.ubi.customviews.TypefacedTextView
                            android:id="@+id/tvEstTotalCost"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="1.0"
                            android:textColor="#00AEEF"
                            android:textSize="12.5sp"
                            ubi:typeface="EncodeSansNormal-300-Light.ttf" />
                    </LinearLayout>

                    <com.modusgo.ubi.customviews.TypefacedButton
                        android:id="@+id/btnFindMechanic"
                        android:layout_width="152dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:background="@color/btn_orange"
                        android:text="Find a mechanic"
                        android:textAllCaps="true"
                        android:textColor="#edf1f9"
                        android:textSize="12.5sp"
                        ubi:typeface="EncodeSansNormal-500-Medium.ttf" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/diagnostics_detail_shadow" />

                    <LinearLayout
                        android:id="@+id/llList"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#e6e9ed"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
    <!-- The navigation drawer -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginLeft="-64dp"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/left_drawer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#D9FFFFFF"
            android:cacheColorHint="@android:color/transparent"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:listSelector="@android:color/transparent" />

        <com.modusgo.ubi.customviews.TypefacedTextView
            android:id="@+id/tvVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D9FFFFFF"
            android:gravity="center|bottom"
            android:paddingTop="5dp"
            android:paddingBottom="8dp"
            android:text="Version: 1.0.1"
            android:textColor="@color/menu_text_gray"
            android:textSize="12sp"
            ubi:typeface="EncodeSansNormal-300-Light.ttf" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>